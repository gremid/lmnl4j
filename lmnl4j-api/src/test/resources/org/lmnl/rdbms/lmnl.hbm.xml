<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.lmnl.rdbms.QNameRelation" table="lmnl_qname">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="localName" not-null="true" column="local_name" index="lmnl_qname_name" />
		<property name="namespace" index="lmnl_qname_name" />
	</class>

	<class name="org.lmnl.rdbms.TextRelation" table="lmnl_text">
		<id name="id">
			<generator class="native" />
		</id>
		<property name="content" not-null="true" />
	</class>

	<class name="org.lmnl.rdbms.LayerRelation" table="lmnl_layer">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="name" class="org.lmnl.rdbms.QNameRelation" not-null="true" />
		<many-to-one name="owner" class="org.lmnl.rdbms.LayerRelation" />
		<many-to-one name="text" not-null="true" column="layer_text" />
		<component name="range">
			<property name="start" not-null="true" index="lmnl_layer_range"/>
			<property name="end" not-null="true" index="lmnl_layer_range" />
		</component>
		<property name="serializableData" column="data" length="65535" />
	</class>
</hibernate-mapping>